@model KoreanSkincareShop.Models.ViewModels.LoginViewModel

<section style="min-height: 100vh; display: flex; align-items: center; padding: 6rem 0; background: linear-gradient(135deg, var(--warm-cream) 0%, var(--soft-peach) 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="card-wrapper" style="background: white; padding: 3rem; border-radius: 30px; box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);">

                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <img src="~/images/products/mediheal-pure-calming-mask.jpg"
                                 alt="Skincare Shop"
                                 style="height: 80px; width: 80px; border-radius: 50%; border: 3px solid var(--primary-pink); object-fit: cover;">
                        </div>
                        <h1 class="display-5 mb-2" style="font-family: 'Cormorant Garamond', serif;">
                            <strong>Welcome Back</strong>
                        </h1>
                        <p class="text-muted">
                            Sign in to your account
                        </p>
                    </div>

                    <form asp-action="Login" method="post">
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="border-radius: 15px; border: none;"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-4">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label" style="font-weight: 400;">
                                Remember me
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3" style="padding: 0.9rem;">
                            <strong>Sign In</strong>
                        </button>

                        <div class="text-center">
                            <p class="mb-0" style="color: var(--text-muted);">
                                Don't have an account?
                                <a asp-action="Register"
                                   asp-route-returnUrl="@ViewData["ReturnUrl"]"
                                   style="color: var(--primary-rose); font-weight: 600; text-decoration: none;">
                                    Sign up
                                </a>
                            </p>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
