@model KoreanSkincareShop.Models.Payment

@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white text-center">
                    <i class="bi bi-check-circle-fill" style="font-size: 3rem;"></i>
                    <h2 class="mt-3 mb-0">Payment Successful!</h2>
                </div>
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <p class="lead">Thank you for your purchase! Your order is being processed.</p>
                        <p class="text-muted">A confirmation email has been sent to <strong>@Model.Order?.Email</strong></p>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">ORDER NUMBER</h6>
                            <h4>#@Model.OrderId</h4>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">TRANSACTION ID</h6>
                            <h4>@Model.TransactionId</h4>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">AMOUNT PAID</h6>
                            <h4 class="text-success">@Model.Amount.ToString("C")</h4>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">PAYMENT METHOD</h6>
                            <h4>@Model.PaymentMethod</h4>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">PAYMENT DATE</h6>
                            <p>@Model.ProcessedAt?.ToString("MMMM dd, yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">STATUS</h6>
                            <span class="badge bg-success fs-6">@Model.Status</span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="alert alert-info">
                        <h6><i class="bi bi-info-circle-fill me-2"></i>What happens next?</h6>
                        <ul class="mb-0">
                            <li>We'll send you order confirmation via email</li>
                            <li>Your products will be prepared for shipping</li>
                            <li>You'll receive a tracking number once shipped</li>
                            <li>Expected delivery: 3-5 business days</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-fill me-2"></i>Back to Home
                        </a>
                        <a asp-controller="Products" asp-action="Shop" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-bag-fill me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted">
                    Need help? <a href="#">Contact Support</a>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header i {
        animation: successPulse 1s ease-in-out;
    }
    
    @@keyframes successPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }
</style>
